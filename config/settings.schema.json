{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OpenDoliConnect Settings",
  "type": "object",
  "properties": {
    "api_url": {
      "type": "string",
      "format": "uri",
      "title": "Dolibarr API URL"
    },
    "api_token": {
      "type": "string",
      "title": "Dolibarr API Token"
    },
    "default_warehouse": {
      "type": "string",
      "title": "Entrepôt par défaut"
    },
    "sync_products": {
      "type": "string",
      "enum": ["disabled", "wp_to_doli", "doli_to_wp", "bidirectional"],
      "default": "doli_to_wp"
    },
    "sync_orders": {
      "type": "string",
      "enum": ["disabled", "wp_to_doli"],
      "default": "wp_to_doli"
    },
    "sync_invoices": {
      "type": "boolean",
      "default": true
    },
    "sync_shipments": {
      "type": "boolean",
      "default": true
    }
  },
  "required": ["api_url", "api_token"]
}
